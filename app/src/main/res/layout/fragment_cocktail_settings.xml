<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vModel"
            type="com.example.cocktailmachine.cocktailsettings.CocktailSettingsViewModel" />
    </data>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/big_cocktail_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/cocktail_img_content_description"
                android:src="@drawable/ic_insert_photo" />

            <TextView
                android:id="@+id/cocktail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/big_cocktail_img"
                android:gravity="center"
                android:singleLine="true"
                android:text="@{vModel.cocktail.cocktailName}"
                android:textSize="24sp"
                tools:text="Cocktail Name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingredient_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cocktail_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <Button
                android:id="@+id/cocktail_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:backgroundTint="@color/peach_puff"
                android:text="@string/update_cocktail_btn" />

        </RelativeLayout>

    </ScrollView>

</layout>