<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vModel"
            type="com.example.cocktailmachine.ui.cocktailsettings.CocktailSettingsViewModel" />
    </data>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/big_cocktail_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/cocktail_img_content_description"
                android:src="@drawable/ic_insert_photo" />

            <EditText
                android:id="@+id/cocktail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/big_cocktail_img"
                android:ellipsize="end"
                android:gravity="center"
                android:autofillHints="@string/cocktail_name"
                android:hint="@string/cocktail_name"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:text="@={vModel.cocktail.cocktail.cocktailName}"
                android:textSize="24sp"
                tools:text="Cocktail Name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingredient_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cocktail_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <Button
                android:id="@+id/addIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ingredient_list"
                android:layout_centerInParent="true"
                android:onClick="@{() -> vModel.onClickAddIngredient()}"
                android:text="@string/add_ingredient" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                android:backgroundTint="#CCF5E2"
                android:clickable="true"
                android:contentDescription="@string/new_cocktail"
                android:focusable="true"
                app:srcCompat="@drawable/ic_done"
                app:tint="@color/white" />

        </RelativeLayout>

    </ScrollView>

</layout>